<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
        <PreferenceCategory
            android:title="@string/pref_cat_ui_settings"
            app:iconSpaceReserved="false">
                <androidx.preference.ListPreference
                    android:defaultValue=""
                    android:entries="@array/pref_application_color_scheme_labels"
                    android:entryValues="@array/pref_application_color_scheme_values"
                    android:key="application_color_scheme"
                    android:title="@string/pref_application_color_scheme"
                    app:iconSpaceReserved="false" />
                <androidx.preference.SwitchPreferenceCompat
                    android:defaultValue="true"
                    android:key="large_arrow_icon"
                    android:summary="@string/activity_large_arrow_icon_summary"
                    android:title="@string/activity_large_arrow_icon"
                    app:iconSpaceReserved="false" />
        </PreferenceCategory>

        <PreferenceCategory
            android:title="@string/graph_main"
            app:iconSpaceReserved="false">
                <Preference
                    android:key="graph_main_summary"
                    android:summary="@string/graph_main_summary"
                    app:iconSpaceReserved="false" />
                <androidx.preference.SeekBarPreference
                    app:showSeekBarValue="true"
                    app:seekBarIncrement="1"
                    app:min="0"
                    android:max="24"
                    android:defaultValue="4"
                    android:key="graph_duration_phone_main"
                    android:summary="@string/graph_duration_phone_main_summary"
                    android:title="@string/graph_duration"
                    app:iconSpaceReserved="false" />
                <androidx.preference.SeekBarPreference
                    app:showSeekBarValue="true"
                    app:seekBarIncrement="1"
                    app:min="1"
                    android:max="7"
                    android:defaultValue="2"
                    android:key="graph_days_phone_main"
                    android:summary="@string/graph_days_phone_main_summary"
                    android:title="@string/graph_days_phone_main"
                    app:iconSpaceReserved="false" />
                <androidx.preference.SeekBarPreference
                    android:defaultValue="0"
                    app:showSeekBarValue="true"
                    app:seekBarIncrement="1"
                    app:min="0"
                    android:max="10"
                    android:key="graph_transparency_phone_main"
                    android:summary="@string/pref_graph_transparency_phone_main_summary"
                    android:title="@string/pref_floating_widget_transparency"
                    app:iconSpaceReserved="false" />
        </PreferenceCategory>
        <PreferenceCategory
            android:title="@string/graph_widgets"
            app:iconSpaceReserved="false">
                <Preference
                    android:key="graph_widgets_summary"
                    android:summary="@string/graph_widgets_summary"
                    app:iconSpaceReserved="false" />
                <androidx.preference.SeekBarPreference
                    app:showSeekBarValue="true"
                    app:seekBarIncrement="1"
                    app:min="1"
                    android:max="12"
                    android:defaultValue="2"
                    android:key="graph_bitmap_duration"
                    android:summary="@string/graph_duration_phone_widget_summary"
                    android:title="@string/graph_duration"
                    app:iconSpaceReserved="false" />
                <androidx.preference.SwitchPreferenceCompat
                    android:defaultValue="false"
                    android:key="graph_bitmap_show_axis"
                    android:summary="@string/graph_show_axis_summary"
                    android:title="@string/graph_show_axis"
                    app:iconSpaceReserved="false" />
                <androidx.preference.SeekBarPreference
                    app:showSeekBarValue="true"
                    app:seekBarIncrement="1"
                    app:min="1"
                    android:max="10"
                    android:defaultValue="5"
                    android:key="graph_bitmap_circle_radius"
                    android:summary="@string/graph_circle_radius_summary"
                    android:title="@string/graph_circle_radius"
                    app:iconSpaceReserved="false" />
        </PreferenceCategory>
</PreferenceScreen>
